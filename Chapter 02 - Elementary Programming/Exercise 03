package c2e3correct;

import java.util.Scanner;

public class C2e3correct {

    public static void main(String[] args) {
        // TODO code application logic here
        
        /*
        2.3 (Convert feet into meters) 
        Write a program that reads a number in feet, converts it to meters, and 
        displays the result. One foot is 0.305 meter. 
        Here is a sample run:
            Enter a value for feet: 16.5
            16.5 feet is 5.0325 meters
        */
        
        // create scanner object for user input
        Scanner input = new Scanner(System.in);
        
        // welcome to line
        System.out.println("Welcome! This program converts feet into meters. ");
        
        // user input of feet
        System.out.println("Please enter value in feet. ");
        double feet = input.nextDouble();
        
        // convert feet to meters
        double meters = feet * 0.305;
        
        // display the conversion
        System.out.println(feet+" feet is "+meters+" meters");
        
    }
    
}
